<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.micol.jsptest.member.service.MemberMapper">
	<select id="memberSelectList"
		resultType="co.micol.jsptest.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>

	<select id="memberSelect"
		parameterType="co.micol.jsptest.member.service.MemberVO"
		resultType="co.micol.jsptest.member.service.MemberVO">
		SELECT * FROM MEMBER
		WHERE ID = #{id}
		<if test="password != null">
			AND PASSWORD = #{password}
		</if>
	</select>

	<insert id="memberInsert"
		parameterType="co.micol.jsptest.member.service.MemberVO">
		INSERT INTO MEMBER
		VALUES(#{id}, #{password}, #{name},	#{tel}, #{address}, #{author})
	</insert>

	<delete id="memberDelete"
		parameterType="co.micol.jsptest.member.service.MemberVO">
		delete from member where id = #{id}
	</delete>

	<update id="memberUpdate"
		parameterType="co.micol.jsptest.member.service.MemberVO">

	</update>
</mapper>